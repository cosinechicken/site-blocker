{
  "manifest_version": 3,
  "name": "Off-Task Blocker",
  "version": "1.0",
  "description": "An extension to detect and block off-task browsing behavior.",
  "permissions": ["tabs", "webNavigation", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"]
}
